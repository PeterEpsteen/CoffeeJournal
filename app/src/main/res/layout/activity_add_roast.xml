<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            style="@style/TextAppearance.AppCompat.Headline"
            android:text="Roast name" />

        <EditText
            android:id="@+id/roast_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:inputType="text"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Headline"
            android:text="Beans"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cardview_default_radius"
            android:elevation="@dimen/cardview_default_radius"
            app:cardUseCompatPadding="true"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/beans_linear_layout"
            android:orientation="vertical"
            android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/first_bean_row">

            <EditText
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="2"
                android:textSize="14sp"
                android:inputType="text"
                android:singleLine="true"
                android:ellipsize="end"
                android:hint="Bean Name"
                android:id="@+id/bean_name_edit_text"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:inputType="number"
                android:id="@+id/bean_weight_edit_text"
                android:hint="Weight"/>
        </LinearLayout>

        </LinearLayout>

        </android.support.v7.widget.CardView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Row"
            android:layout_gravity="end"
            android:id="@+id/add_bean_row_button"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginLeft="8dp"
            android:text="Steps"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cardview_default_radius"
            android:elevation="@dimen/cardview_default_radius"
            app:cardUseCompatPadding="true"
            >

        <LinearLayout
            android:id="@+id/steps_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/first_steps_row"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:hint="Time"
                    android:inputType="time"
                    android:id="@+id/time_edit_text"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:id="@+id/temp_edit_text"
                    android:hint="Tempature"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:inputType="textMultiLine"
                    android:id="@+id/comments_edit_text"
                    android:hint="Comments"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Row"
            android:layout_gravity="end"
            android:elevation="6dp"
            android:id="@+id/add_step_row_button"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tasting Notes"
            style="@style/TextAppearance.AppCompat.Headline"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:elevation="@dimen/cardview_default_radius"
            app:cardCornerRadius="@dimen/cardview_default_radius"
            android:padding="8dp">
        <EditText
            android:id="@+id/tasting_notes_edit"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="3"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:gravity="start|top"
            android:hint="Notes"/>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent">
        <!--<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Roast"
            android:id="@+id/start_add_roast_button"/>-->

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        <Button
            android:id="@+id/add_roast_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:backgroundTint="@color/colorAccent"
            android:text="Add Roast"
            />
        </LinearLayout>

    </LinearLayout>

</ScrollView>