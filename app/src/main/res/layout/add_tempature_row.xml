<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/add_step_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingBottom="16dp"
        android:layout_gravity="top"
        android:textColorHint="@color/colorTextDark"
        android:layout_marginRight="8dp"
        android:id="@+id/time_textinputlayout"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/time_edit_text"
            style="@style/TextAppearance.AppCompat.Body1"
            android:singleLine="true"
            android:layout_gravity="top"
            android:textColor="@color/colorTextDark"
            android:inputType="time"
            android:paddingBottom="16dp"
            android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
            android:hint="Time"
            />


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColorHint="@color/colorTextDark"
        android:paddingBottom="16dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="top"
        >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
        android:singleLine="true"
        android:textColor="@color/colorTextDark"

        android:layout_gravity="top"
        style="@style/TextAppearance.AppCompat.Body1"
        android:inputType="number"
        android:id="@+id/temp_edit_text"
        android:hint="Roaster Temp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorTextDark"

        android:layout_weight="2"
        android:paddingBottom="16dp"
        android:layout_gravity="top"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
            android:singleLine="true"
            android:textColor="@color/colorTextDark"
            android:layout_gravity="top"
            style="@style/TextAppearance.AppCompat.Body1"
            android:inputType="number"
            android:id="@+id/bean_temp_edit_text"
            android:hint="Bean Temp"/>
    </android.support.design.widget.TextInputLayout>
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments:"
            style="@style/TextAppearance.AppCompat.Body1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="2"
                android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
                android:inputType="textMultiLine"
                style="@style/TextAppearance.AppCompat.Body1"
                android:id="@+id/comments_edit_text"
                android:textColor="@color/colorTextDark"
                android:textColorHint="@color/colorTextDark"
                android:layout_height="wrap_content"
                android:hint="Comments"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Row"
            android:background="@color/backgroundDefaultWhite"
            android:textColor="@color/common_google_signin_btn_text_light"
            android:id="@+id/step_row_delete_button"
            android:onClick="deleteRow"/>

    </LinearLayout>


    </android.support.v7.widget.CardView>

