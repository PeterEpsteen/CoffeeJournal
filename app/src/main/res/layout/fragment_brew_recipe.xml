<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:id="@+id/slider_linear_layout"
            android:layout_marginBottom="8dp"
            android:paddingLeft= "16dp"
            android:paddingRight= "16dp"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_margin="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volume"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:gravity="center"
                />

            <SeekBar
                android:id="@+id/scaleSeekBar"
                android:max="300"
                android:progress="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"

                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:text="Water Units"/>

            <Button
                android:background="@drawable/start_button_shape"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"

                android:layout_height="36dp"
                style="@style/TextAppearance.AppCompat.Button"
                android:id="@+id/water_units_button"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:backgroundTint="@color/colorAccent"
                android:text="Ounces"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:text="Coffee Units"/>

                <Button
                    android:background="@drawable/start_button_shape"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    style="@style/TextAppearance.AppCompat.Button"
                    android:layout_gravity="center_horizontal"

                    android:id="@+id/coffee_units_button"
                    android:textColor="@color/common_google_signin_btn_text_dark"
                    android:backgroundTint="@color/colorAccent"
                    android:text="Ounces"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grind: "
        android:layout_marginLeft="16dp"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:id="@+id/grind_label"/>

        <TextView
        android:layout_width="0dp"
            android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Coarse"
        android:id="@+id/grind_recipe_textview"
        android:gravity="start"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:padding="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/strength_label"
                android:text="Strength: "
                style="@style/TextAppearance.AppCompat.Subhead"
                />

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/strength_spinner"/>

        </LinearLayout>






        <Button
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:text="Start!"
        style="@style/TextAppearance.AppCompat.Button"
        android:background="@drawable/start_button_shape"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/common_google_signin_btn_text_dark"
            android:layout_gravity="center_horizontal"
        android:id="@+id/start_button"
        android:layout_margin="16dp"
        android:includeFontPadding="true"
        android:padding="8dp"
        />





    </LinearLayout>

