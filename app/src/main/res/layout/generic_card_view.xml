    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/card_view_container"
        android:paddingBottom="16dp">


    </LinearLayout>


</android.support.v7.widget.CardView>