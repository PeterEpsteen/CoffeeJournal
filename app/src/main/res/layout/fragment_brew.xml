
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="56dp"
    android:fitsSystemWindows="true"
    android:background="@color/backgroundColorBeige"
    tools:context="com.example.peter.coffeejournal.BrewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundDefaultWhite"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:elevation="4dp"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brew Recipes"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorTextDark"
            android:id="@+id/pick_brew_tv"
            />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>
            <Spinner
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="16dp"
                android:id="@+id/sort_by_spinner"
                android:gravity="end|center_vertical"
                android:background="@drawable/sort_by_icon"
                />

        </LinearLayout>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/brew_list_view"
            android:layout_gravity="fill_vertical"
            android:divider="@null"
            android:dividerHeight="8dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="40dp"
        android:clipToPadding="false">
    </ListView>
    </LinearLayout>
</FrameLayout>

